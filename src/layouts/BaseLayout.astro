        <meta property="og:url" content={Astro.url} />
        <meta
            property="og:title"
            content={`${pageTitle} - Daniel Santiago Muñoz Jaramillo`}
        />
        <meta property="og:description" content={description} />
        <meta
            property="og:image"
            content={new URL("/og-image.png", Astro.site)}
        />
        <meta property="og:locale" content="en_US" />

        <!-- Twitter -->
