        <ViewTransitions />
    </head>
    <body>
        <a href="#main-content" class="sr-only"> Skip to main content </a>
        <Navbar client:idle />
        <main id="main-content" class="pl-4 pr-4 container mx-auto max-w-3xl" transition:animate="fade">
            <Hero title={title} description={heroDescription} />
            <slot />
