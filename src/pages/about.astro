--- 
import { 
  Card,
  CardContent,
  CardDescription,
  CardHeader,
  CardFooter,
  CardTitle 
} from "@/components/ui/card"
import { Badge } from "@/components/ui/badge"
import { Button } from "@/components/ui/button"
import { ArrowUpRight } from "lucide-react"

import BaseLayout from '../layouts/BaseLayout.astro'

const pageTitle = 'About'
const heroTitle = 'About me'
const heroDescription = 'Learn more about my journey and experience'
--- 
<BaseLayout pageTitle={pageTitle} title={heroTitle} description={heroDescription}>
  <div class="container mx-auto max-w-xl text-center">
    <section>
      <h2 class="text-2xl text-start font-bold mb-4">Profile</h2>
