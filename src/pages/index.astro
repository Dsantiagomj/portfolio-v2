---
import BaseLayout from "@/layouts/BaseLayout.astro";
import {
    Card,
    CardContent,
    CardHeader,
    CardTitle,
    CardDescription,
    CardFooter,
} from "@/components/ui/card";
import { Button } from "@/components/ui/button";
import { Badge } from "@/components/ui/badge";

import {
    ChevronRight,
    Download,
    Github,
    Linkedin,
    Mail,
    ExternalLink,
} from "lucide-react";
const pageTitle = "Home";
const heroTitle = "< Hello world />";
const heroDescription = " I'm a web developer based in Colombia";
const description =
    "Portfolio of Daniel Santiago Muñoz, Sr Web Developer specializing in React, TypeScript, and modern web technologies. View projects and get in touch.";
---

<BaseLayout
    pageTitle={pageTitle}
    title={heroTitle}
    description={description}
    heroDescription={heroDescription}
>
    <section
        aria-labelledby="profile-heading"
        class="container md:flex mx-auto max-w-xl py-12 mb-8 items-center justify-between gap-6 animate-on-scroll animate-fade-in-up"
    >
        <div class="flex-1">
            <h1 id="profile-heading" class="mb-3">Daniel Santiago MJ</h1>
            <p class="text-lg text-muted-foreground">
                Passionate digital craftsman always learning something new.
            </p>
        </div>
        <div class="flex justify-center mt-6 md:mt-0">
            <picture>
                <source srcset="/profile.webp" type="image/webp" />
                <img
                    src="/profile.png"
                    alt="Daniel Santiago Muñoz Jaramillo, Software Developer professional headshot"
                    class="w-28 h-28 rounded-full border-2 border-border"
                    loading="eager"
                    width="112"
                    height="112"
                />
            </picture>
        </div>
    </section>
    <section
        aria-labelledby="intro-heading"
        class="container mx-auto max-w-xl py-8 mb-8 animate-on-scroll animate-fade-in-up"
    >
        <h2 id="intro-heading" class="mb-4">Intro</h2>
        <div class="space-y-6">
            <p class="text-base leading-relaxed">
                I&apos;m a software developer based in Barranquilla, Colombia
                with a passion for building digital services/stuff. A fan of
                learning and interacting with new technologies. When I&apos;m
                not online, I love to play videogames, play football and spend
                time with my dogs and cat.
            </p>
            <div>
                <p class="text-lg font-semibold mb-4">Learn more about me</p>
                <div class="flex items-center flex-col md:flex-row gap-3">
                    <a
                        class="inline-flex items-center justify-center gap-2 rounded-md border border-input bg-background px-4 py-2 text-sm font-medium ring-offset-background transition-colors hover:bg-accent hover:text-accent-foreground focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 button-press"
                        href="https://docs.google.com/document/d/1gNzzFDvFDE_7reufsQt8Oqi4ozO_--AHzdryvmtXcXA/export?format=pdf"
                    >
                        Download CV <Download size={16} />
                    </a>
                    <span class="text-muted-foreground text-sm">or</span>
                    <a
                        class="inline-flex items-center justify-center gap-2 rounded-md border border-input bg-background px-4 py-2 text-sm font-medium ring-offset-background transition-colors hover:bg-accent hover:text-accent-foreground focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 button-press"
                        href="/about"
                    >
                        Check profile <ChevronRight size={16} />
                    </a>
                </div>
            </div>
        </div>
    </section>
    <section
        aria-labelledby="work-heading"
        class="container mx-auto max-w-xl py-8 mb-8 animate-on-scroll animate-fade-in-up"
    >
        <h2 id="work-heading" class="mb-4">Work</h2>

        <div class="mb-12">
            <h3 class="text-xl font-semibold mb-4">
                Companies I've worked with
            </h3>
            <p class="text-base leading-relaxed mb-6">
                Organizations I've had the privilege to work with throughout my
                career.
            </p>
            <div
                class="grid md:grid-cols-3 gap-4 grid-cols-2 items-center justify-items-center"
            >
                <img
                    loading="lazy"
                    src="/companies/mb-star.svg"
                    alt="Mercedes-Benz Star - MB-Star automotive partner"
                    class="rounded-lg mb-4 transition-all duration-200 hover:scale-110 hover:opacity-80"
                />

                <img
                    loading="lazy"
                    src="/companies/monks-white-logo.png"
                    alt=".Monks company logo"
                    class="rounded-lg hidden dark:block mb-4 transition-all duration-200 hover:scale-110 hover:opacity-80"
                />
                <img
                    loading="lazy"
                    src="/companies/monks-black-logo.svg"
                    alt=".Monks company logo"
                    class="rounded-lg block dark:hidden mb-4 transition-all duration-200 hover:scale-110 hover:opacity-80"
                />

                <img
                    loading="lazy"
                    src="/companies/zemoga-logo-white.png"
                    alt="Zemoga company logo"
                    class="rounded-lg hidden dark:block mb-4 transition-all duration-200 hover:scale-110 hover:opacity-80"
                />
                <img
                    loading="lazy"
                    src="/companies/zemoga-logo-grey.png"
                    alt="Zemoga company logo"
                    class="rounded-lg block dark:hidden mb-4 transition-all duration-200 hover:scale-110 hover:opacity-80"
                />

                <img
                    loading="lazy"
                    src="/companies/globant-logo-light.png"
                    alt="Globant company logo"
                    class="rounded-lg hidden dark:block mb-4 transition-all duration-200 hover:scale-110 hover:opacity-80"
                />
                <img
                    loading="lazy"
                    src="/companies/globant-logo-dark.svg"
                    alt="Globant company logo"
                    class="rounded-lg block dark:hidden mb-4 transition-all duration-200 hover:scale-110 hover:opacity-80"
                />

                <img
                    loading="lazy"
                    src="/companies/koombea-white.svg"
                    alt="Koombea company logo"
                    class="rounded-lg hidden dark:block mb-4 transition-all duration-200 hover:scale-110 hover:opacity-80"
                />
                <img
                    loading="lazy"
                    src="/companies/koombea.svg"
                    alt="Koombea company logo"
                    class="rounded-lg block dark:hidden mb-4 transition-all duration-200 hover:scale-110 hover:opacity-80"
                />

                <img
                    loading="lazy"
                    src="/companies/makeitreal-white.png"
                    alt="Make It Real coding bootcamp logo"
                    class="rounded-lg hidden dark:block mb-2 transition-all duration-200 hover:scale-110 hover:opacity-80"
                />
                <img
                    loading="lazy"
                    src="/companies/makeitreal.png"
                    alt="Make It Real coding bootcamp logo"
                    class="rounded-lg block dark:hidden mb-2 transition-all duration-200 hover:scale-110 hover:opacity-80"
                />
            </div>
        </div>

        <div>
            <h3 class="text-xl font-semibold mb-4">Projects I've built</h3>
            <p class="text-base leading-relaxed mb-6">
                Selected public projects I've contributed to or built from
                scratch.
            </p>
            <div class="grid md:grid-cols-2 gap-6">
                <a
                    href="https://mercedes-benz.alemanaautomotriz.com.co/"
                    target="_blank"
                    rel="noopener noreferrer"
                    class="block animate-on-scroll animate-scale-in card-hover focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 rounded-lg"
                >
                    <Card className="h-full">
                        <CardHeader>
                            <div
                                class="flex items-start justify-between gap-2 mb-2"
                            >
                                <CardTitle className="text-start text-lg"
                                    >Mercedes-Benz Alemana Automotriz</CardTitle
                                >
                                <ExternalLink
                                    size={18}
                                    className="text-muted-foreground flex-shrink-0"
                                />
                            </div>
                            <CardDescription
                                className="text-start flex items-center gap-2"
                            >
                                <img
                                    src="/companies/mb-star.svg"
                                    alt=""
                                    aria-hidden="true"
                                    class="w-5 h-5 object-contain"
                                />
                                Alemana Automotriz
                            </CardDescription>
                        </CardHeader>
                        <CardContent>
                            <p
                                class="text-sm text-muted-foreground leading-relaxed"
                            >
                                Award-winning dealership website recognized as
                                best Mercedes-Benz digital presence in Colombia.
                                Built with modern technologies and maintained
                                with continuous improvements.
                            </p>
                        </CardContent>
                        <CardFooter className="justify-start gap-2 flex-wrap">
                            <Badge variant="secondary">Astro</Badge>
                            <Badge variant="secondary">TypeScript</Badge>
                            <Badge variant="secondary">AWS Lambda</Badge>
                        </CardFooter>
                    </Card>
                </a>

                <a
                    href="https://monksflow.ai/home/"
                    target="_blank"
                    rel="noopener noreferrer"
                    class="block animate-on-scroll animate-scale-in card-hover focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 rounded-lg"
                >
                    <Card className="h-full">
                        <CardHeader>
                            <div
                                class="flex items-start justify-between gap-2 mb-2"
                            >
                                <CardTitle className="text-start text-lg"
                                    >MonksFlow.ai</CardTitle
                                >
                                <ExternalLink
                                    size={18}
                                    className="text-muted-foreground flex-shrink-0"
                                />
                            </div>
                            <CardDescription
                                className="text-start flex items-center gap-2"
                            >
                                <img
                                    src="/companies/monks-black-logo.svg"
                                    alt=""
                                    aria-hidden="true"
                                    class="w-5 h-5 object-contain block dark:hidden"
                                />
                                <img
                                    src="/companies/monks-white-logo.png"
                                    alt=""
                                    aria-hidden="true"
                                    class="w-5 h-5 object-contain hidden dark:block"
                                />
                                .Monks
                            </CardDescription>
                        </CardHeader>
                        <CardContent>
                            <p
                                class="text-sm text-muted-foreground leading-relaxed"
                            >
                                Enterprise AI platform enabling teams to
                                discover, configure, and collaborate with
                                intelligent agents. Leading frontend
                                architecture and design system implementation.
                            </p>
                        </CardContent>
                        <CardFooter className="justify-start gap-2 flex-wrap">
                            <Badge variant="secondary">React</Badge>
                            <Badge variant="secondary">TypeScript</Badge>
                            <Badge variant="secondary">NestJS</Badge>
                        </CardFooter>
                    </Card>
                </a>

                <a
                    href="https://github.com/Dsantiagomj/DSMJ-Ai-Toolkit"
                    target="_blank"
                    rel="noopener noreferrer"
                    class="block animate-on-scroll animate-scale-in card-hover focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 rounded-lg"
                >
                    <Card className="h-full">
                        <CardHeader>
                            <div
                                class="flex items-start justify-between gap-2 mb-2"
                            >
                                <CardTitle className="text-start text-lg"
                                    >DSMJ AI Toolkit</CardTitle
                                >
                                <ExternalLink
                                    size={18}
                                    className="text-muted-foreground flex-shrink-0"
                                />
                            </div>
                            <CardDescription
                                className="text-start flex items-center gap-2"
                            >
                                <Github
                                    size={16}
                                    className="text-muted-foreground"
                                />
                                Open Source
                            </CardDescription>
                        </CardHeader>
                        <CardContent>
                            <p
                                class="text-sm text-muted-foreground leading-relaxed"
                            >
                                Production-ready AI toolkit extending Claude
                                Code with specialized agents and skills. Open
                                source contribution to the developer community
                                with focus on automation and productivity.
                            </p>
                        </CardContent>
                        <CardFooter className="justify-start gap-2 flex-wrap">
                            <Badge variant="secondary">Claude Code</Badge>
                            <Badge variant="secondary">AI Agents</Badge>
                            <Badge variant="secondary">TypeScript</Badge>
                        </CardFooter>
                    </Card>
                </a>

                <a
                    href="https://colorbeats.co"
                    target="_blank"
                    rel="noopener noreferrer"
                    class="block animate-on-scroll animate-scale-in card-hover focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 rounded-lg"
                >
                    <Card className="h-full">
                        <CardHeader>
                            <div
                                class="flex items-start justify-between gap-2 mb-2"
                            >
                                <CardTitle className="text-start text-lg"
                                    >ColorBeats</CardTitle
                                >
                                <ExternalLink
                                    size={18}
                                    className="text-muted-foreground flex-shrink-0"
                                />
                            </div>
                            <CardDescription
                                className="text-start flex items-center gap-2"
                            >
                                <img
                                    src="/companies/colorbeats.png"
                                    alt=""
                                    aria-hidden="true"
                                    class="w-5 h-5 object-contain block dark:hidden"
                                />
                                <img
                                    src="/companies/colorbeats-white.png"
                                    alt=""
                                    aria-hidden="true"
                                    class="w-5 h-5 object-contain hidden dark:block"
                                />
                                Makeup Brand
                            </CardDescription>
                        </CardHeader>
                        <CardContent>
                            <p
                                class="text-sm text-muted-foreground leading-relaxed"
                            >
                                Custom Shopify e-commerce platform with advanced
                                Liquid templating for complete inventory and
                                customer management. Designed for scalability
                                and seamless brand experience.
                            </p>
                        </CardContent>
                        <CardFooter className="justify-start gap-2 flex-wrap">
                            <Badge variant="secondary">Shopify</Badge>
                            <Badge variant="secondary">Liquid</Badge>
                            <Badge variant="secondary">E-commerce</Badge>
                        </CardFooter>
                    </Card>
                </a>
            </div>
        </div>
    </section>
    <section
        aria-labelledby="contact-heading"
        class="container mx-auto max-w-xl py-8 mb-8 animate-on-scroll animate-fade-in-up"
    >
        <h2 id="contact-heading" class="mb-4">Say hi</h2>
        <p class="text-base leading-relaxed mb-6">
            You have a project in mind or just want to say hi? Feel free to drop
            me a message.
        </p>
        <a
            class="inline-flex items-center justify-center gap-2 rounded-md border border-input bg-background px-4 py-2 text-sm font-medium ring-offset-background transition-colors hover:bg-accent hover:text-accent-foreground focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 button-press"
            href="/contact"
        >
            Get in touch <ChevronRight size={16} />
        </a>
    </section>
    <section
        aria-labelledby="social-heading"
        class="container mx-auto max-w-xl py-8 animate-on-scroll animate-fade-in-up"
    >
        <h2 id="social-heading" class="mb-4">Let's Connect</h2>
        <nav aria-label="Social media links">
            <ul class="space-y-2">
                <li>
                    <a
                        class="inline-flex items-center justify-center gap-2 rounded-md px-4 py-2 text-sm font-medium ring-offset-background transition-colors hover:bg-accent hover:text-accent-foreground focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2"
                        href="mailto:dsantiagomj@gmail.com"
                    >
                        <Mail size={16} /> Mail
                    </a>
                </li>
                <li>
                    <a
                        class="inline-flex items-center justify-center gap-2 rounded-md px-4 py-2 text-sm font-medium ring-offset-background transition-colors hover:bg-accent hover:text-accent-foreground focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2"
                        href="https://www.linkedin.com/in/dsantiagomj"
                        target="_blank"
                        rel="noopener noreferrer"
                    >
                        <Linkedin size={16} /> Linkedin
                    </a>
                </li>
                <li>
                    <a
                        class="inline-flex items-center justify-center gap-2 rounded-md px-4 py-2 text-sm font-medium ring-offset-background transition-colors hover:bg-accent hover:text-accent-foreground focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2"
                        href="https://github.com/Dsantiagomj"
                        target="_blank"
                        rel="noopener noreferrer"
                    >
                        <Github size={16} /> Github
                    </a>
                </li>
            </ul>
        </nav>
    </section>
</BaseLayout>
